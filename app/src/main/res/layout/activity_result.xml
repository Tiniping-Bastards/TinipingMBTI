<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/navi"
                android:layout_marginTop="48dp"
                android:text="당신의 티니핑은?"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mbti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/navi"
                android:layout_marginBottom="8dp"
                android:text="MBTI"
                android:textColor="#ffffff"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mbtiImage"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/enfj" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/navi"
                android:text="티니핑"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/oneLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="18dp"
                android:fontFamily="@font/navi"
                android:gravity="center"
                android:text="말풍선"
                android:textColor="#D35D83"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/navi"
                android:text="모든 것을 귀찮아하는 찮아핑\n 맛있는 것을 먹으려다가도 귀찮아서 포기할까 하는 티니핑"
                android:textColor="#555555"
                android:textSize="28sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="56dp"
                android:fontFamily="@font/navi"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries,"
                android:textColor="#444444"
                android:textStyle="bold"
                android:lineSpacingExtra="8dp"
                android:textSize="28sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="64dp">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fairTiniping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/navi"
                        android:gravity="center"
                        android:text="나와 잘 맞는 티니핑"
                        android:textColor="#1BC4EB"
                        android:textSize="24sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/fair"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        tools:srcCompat="@drawable/enfj" />

                    <TextView
                        android:id="@+id/fitsName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/navi"
                        android:gravity="center"
                        android:text="티니핑"
                        android:textStyle="bold"
                        android:textSize="28dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/unfairTiniping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/navi"
                        android:gravity="center"
                        android:text="나와 안 맞는 티니핑"
                        android:textColor="#D35D83"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/unfair"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        tools:srcCompat="@drawable/enfj" />

                    <TextView
                        android:id="@+id/unFitsName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/navi"
                        android:gravity="center"
                        android:text="티니핑"
                        android:textStyle="bold"
                        android:textSize="28dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="64dp">

                <Button
                    android:id="@+id/returnButton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/navi"
                    android:textSize="20sp"
                    android:text="다시하기" />

                <Button
                    android:id="@+id/shareButton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/navi"
                    android:textSize="20sp"
                    android:text="공유하기" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
